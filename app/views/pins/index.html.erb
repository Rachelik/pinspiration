<% if user_signed_in? %>
  <%= link_to '+', new_pin_path, class: "btn btn-outline-primary add-item" %>
<% end %>


<div class="cards">
  <% @pins.each do |pin| %>
      <div class = "card">
        <div class ="card-body">
          <%= link_to image_tag(pin.photo_url, ), pin_path(pin) %>
        </div>
    </div>
  <% end %>

</div>